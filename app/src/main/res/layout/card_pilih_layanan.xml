<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cvpilihlayanan"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header berwarna merah muda -->
        <TextView
            android:id="@+id/tvHeaderid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D18787"
            android:padding="8dp"
            android:text="[ID]"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_marginBottom="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="#D18787"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
             />

        <!-- Konten berwarna abu-abu gelap -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#444444"
            android:padding="12dp"
            >

            <TextView
                android:id="@+id/tvnamapilihlayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvhargapilihlayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga :"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
