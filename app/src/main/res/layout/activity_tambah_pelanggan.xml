<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.TambahPelanggan">

    <TextView
        android:id="@+id/tvtambah1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tambha_pelanggan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_namapel"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="250dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/etlengkap1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvnama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/card_namapel"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"/>

    <TextView
        android:id="@+id/tvalamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_id_alamat"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/etlengkap1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="250dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/etallengkap1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvalamat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/card_id_alamat"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"/>

    <TextView
        android:id="@+id/tvno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_nohp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/etallengkap1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="270dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/etnohp1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/card_nohp"
        android:inputType="phone"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"/>

