<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambahan.Tambahan">

        <TextView
            android:id="@+id/tvtambah_tambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tambahan"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvtambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nama_Tambahan"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="200dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etnamatambahan"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tvtambahan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/Nama_Tambahan"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/tvhargatambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harga_tambahan"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/etnamatambahan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="250dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etharga"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tvhargatambahan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/harga_tambahan"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/tvcabangtambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabang_tambahan"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/etharga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="270dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etcabangtambahan"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tvcabangtambahan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/cabang_tambahan"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/tvstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_tambahan"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/etcabangtambahan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="250dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etstatustambahan"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/etcabangtambahan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/status_tambahan"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle"/>

        <Button
            android:id="@+id/btsimpantambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simpan_tambahan"
            app:layout_constraintTop_toBottomOf="@id/etstatustambahan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

